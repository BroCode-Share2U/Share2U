{% extends "layout.html.twig" %}

{% block title '' %}

{% block content %}
    {% if isBorrower %}
        <h1>is the borrower</h1>
    {% elseif isLoaner %}
        <h1>is the loaner</h1>
    {% endif %}
    {#{{ dump(loan) }}#}
    <div id="commentMain">
        <div class="cardBox">
            <div class="insideCardBox1">
                <div class="pictureBox">
                    <img src="{{ loan.item.cover }}" alt="card item picture">
                </div>
            </div>
            <div class="insideCardBox2">
                {#<div>{{ item.id }}</div>#}
                <h4>{{ loan.item.name }}</h4>
                <div>{{ loan.item.owner.firstname }} {{ loan.item.owner.lastname }}</div>
                {#<div>{{ item.owner.id }}</div>#}
                <div>{{ loan.item.description }}</div>
                <div class="bottomPictureCardBox"><span>Posted on </span>{{ loan.item.insertedAt|date("m/d/Y") }}</div>
            </div>
        </div>
        <div class="inputBox buttonBox">
            {{form(commentForm)}}
        </div>
    </div>


    <script>
        $("#comment_form_submit").html("<i class=\"fas fa-paper-plane\"></i>");

        function addListenerTr()
        {
            $('#comment_form_rating input').on('click', function ()
            {
                $('.itemSelect').removeClass('itemSelect');
                $(this).addClass('itemSelect');
            });
        }
        addListenerTr();


    </script>
{% endblock %}