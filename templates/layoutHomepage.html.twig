<!--HEAD-->
{{ include('head.html') }}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="{{ asset('css/style.min.css') }}" rel="stylesheet" type="text/css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <title>{% block title '' %} - Share2U</title>
</head>
<body>

<!--HEADER-->
<header>
    <nav>
        <ul id="headerMenuList">
            {% if user is not null %}
                <li><a id="headerMenuUsername" href="{{ path('profile') }}">{{user.username}}</a></li>
            {% else %}
            {% endif %}
            <li><a id="headerMenuUnlogged" href="{{ path('homepage') }}">Home</a></li>
            {% if user is not null %}
                <li><a href="{{ path('dashboard') }}">Dashboard</a></li>
                {% if user is not null  and is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('adminPanel') }}"><i class="fas fa-sliders-h"></i></a></li>
                {% endif %}
                <li><a id="headerMenuLogout" href="{{ path('logout') }}">Logout <i class="fas fa-sign-out-alt"></i></a></li>
            {% else %}
            {% endif %}
        </ul>
    </nav>
</header>

{#RESPONSIVE HEADER#}
{{ include('headerResponsive.html.twig') }}

{#RESPONSIVE#}
<style>
    #headerMenuResponsiveSearch,#headerMenuResponsiveTitle{
        display: none;
    }
    #headerMenuResponsive{
        height: 4.9rem !important;
    }
    #headerMenuResponsive ul{
        top: 4rem !important;
    }
</style>
{#END OF RESPONSIVE#}

<main>
    {% block content %}
    {% endblock %}
</main>

<!--FOOTER-->
{{ include('footer.html') }}

</body>
</html>
