{#RESPONSIVE HEADER#}
<div id="headerMenuResponsiveArea">
    <a id="headerMenuResponsiveTitle" href="{{ path('homepage') }}"><h1 id="headerTitle" class="h1Text">Share<span style="margin: 0.7rem;" class="h1TextLetter">2</span>U</h1></a>

            <div id="headerMenuResponsiveSearch">
                <div id="headerSearch">
                    <form action="{{ path('searchItem') }}" method="GET" class="inputBox">
        {% if user is not null %}
                        <input id="headerSearchInput" type="text" placeholder="search here">
                        <div class="buttonBox">
                            <button id="headerSearchBtn" type="submit"><i class="fas fa-search"></i></button>
                        </div>
        {% endif %}
                    </form>
                </div>
            </div>

    <div id="headerMenuResponsive" class="headerMenuToggle">
        <div id="headerMenuResponsiveToggleArea">
            <ul>
               {# {% if is_granted('ROLE_ADMIN') %}#}

    {#
                {% endif %}
    #}
                {% if user is not null %}
                    <li><a href="{{ path('profile') }}">{{user.username}}</a></li>
                {% endif %}
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                {% if user is not null %}
                    <li><a href="{{ path('dashboard') }}">Dashboard</a></li>
                {% endif %}
                {% if user is not null  and is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('adminPanel') }}">Manager</a></li>
                {% endif %}
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('support') }}">Support</a></li>
                {% if user is not null %}
                    <li><a href="{{ path('logout') }}"><i class="fas fa-sign-out-alt"></i></a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div class="headerMenuResponsiveBars"><i class="fas fa-bars"></i></div>
</div>

<script>
    $(document).ready(function() {
        $('.headerMenuResponsiveBars,#headerMenuResponsiveToggleArea').on('click', function() {
            $('#headerMenuResponsive, .headerMenuResponsiveBars, #headerMenuResponsiveTitle, #headerMenuResponsiveSearch').toggleClass('headerMenuToggle');
        })
    });


</script>
{#END OF RESPONSIVE HEADER#}